<%- include('./partials/header') %>

<section class="hero">
  <div class="hero-content">
    <h1>Discover the Amazing World of Animals</h1>
    <p>Learn about different species from around the globe</p>
  </div>
</section>

<section class="animal-grid">
  <h2>Featured Animals</h2>
  
  <div class="animals">
    <% animals.forEach(animal => { %>
      <div class="animal-card">
        <img src="<%= animal.image %>" alt="<%= animal.name %>">
        <div class="animal-info">
          <h3><%= animal.name %></h3>
          <p class="species"><%= animal.species %></p>
          <p><%= animal.description.substring(0, 100) %>...</p>
          <a href="/animal/<%= animal.id %>" class="btn">Learn More</a>
        </div>
      </div>
    <% }); %>
  </div>
</section>

<%- include('./partials/footer') %>